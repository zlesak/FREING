{
  "name": "frontend",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:docker": "ng serve --host 0.0.0.0 --port 4100",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "openapi:clean": "rm -rf src/app/api/generated",
    "openapi:download": "curl -s http://localhost:8082/v3/api-docs > openapi.json",
    "openapi:gen": "npm run openapi:download && npx openapi --input openapi.json --output src/app/api/generated --client fetch --useOptions --useUnionTypes",
    "openapi:refresh": "npm run openapi:gen",
    "openapi:ensure": "[ -d src/app/api/generated ] && [ -f src/app/api/generated/index.ts ] && echo 'OpenAPI client already present' || (echo 'Generating OpenAPI client...' && npm run openapi:gen || echo 'WARNING: OpenAPI generation failed (is backend running on :8082?)')",
    "postinstall": "npm run openapi:ensure || true"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "keycloak-js": "^25.0.6",
    "keycloak-angular": "^20.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.4",
    "@angular/cli": "^20.3.4",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-coverage": "~2.2.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2",
    "openapi-typescript-codegen": "^0.29.0"
  }
}
